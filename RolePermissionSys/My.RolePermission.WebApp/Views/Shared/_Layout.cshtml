<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jquery-easyui-1.4.5/themes/icon.css")
    <link id="easyuiTheme" href="~/Content/jquery-easyui-1.4.5/themes/bootstrap/easyui.css" rel="stylesheet" />
    @Styles.Render("~/Content/jquery-easyui-1.4.5/easyuiExt.css")
    @Scripts.Render("~/bundles/jscookie")
    <script type="text/javascript">
        function initThemes() {
            var $easyuiTheme = $('#easyuiTheme');
            if ($.cookie('easyuiThemeName')) {
                changeThemeFun($.cookie('easyuiThemeName'), $easyuiTheme);
            }
            //else {
            //    $easyuiTheme.attr('href', "DLL/easyUI/themes/bootstrap/easyui.css");
            //}
        }
        function changeThemeFun(themeName, $easyuiTheme) {/* 更换主题 */
            $.cookie('easyuiThemeName', themeName, { expires: 7 });
            var url = $easyuiTheme.attr('href');
            var href = "/DLL/easyUI/themes/" + themeName + '/easyui.css';
            $easyuiTheme.attr('href', href);
            var $iframe = $('iframe');
            if ($iframe.length > 0) {
                for (var i = 0; i < $iframe.length; i++) {
                    var ifr = $iframe[i];
                    $(ifr).contents().find('#easyuiTheme').attr('href', href);
                }
            }
        };
        initThemes();
    </script>
</head>
<body class="easyui-layout">

    @RenderBody()
    @Scripts.Render("~/Content/jquery-easyui-1.4.5/jquery.easyui.min.js")
    @Scripts.Render("~/Content/jquery-easyui-1.4.5/locale/easyui-lang-zh_CN.js")
    @Scripts.Render("~/Content/jquery-easyui-1.4.5/easyuiExt.js")
    @Scripts.Render("~/Content/jquery-easyui-1.4.5/JScriptCommon.js")
    @RenderSection("scripts", required: false)

</body>
</html>
